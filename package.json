{
  "name": "bookmark",
  "workspaces": ["packages/*"],
  "engines": {
    "node": ">=20"
  },
  "packageManager": "bun@1.1.34",
  "scripts": {
    "prepare": "lefthook install",
    "build:npm": "bun run --filter @k1350/novel-bookmark build",
    "build:browser": "bun run --filter packages-novel-bookmark-browser build && cp ./packages/novel-bookmark-browser/dist/index.min.js ./packages/sample-html/public/js/novel-bookmark/index.min.js",
    "dev:astro": "bun run --filter packages-sample-astro dev",
    "dev:html": "bun run --filter packages-sample-html dev",
    "lint": "bun run --filter '*' lint && biome check --write ."
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "lefthook": "^1.8.2"
  }
}
